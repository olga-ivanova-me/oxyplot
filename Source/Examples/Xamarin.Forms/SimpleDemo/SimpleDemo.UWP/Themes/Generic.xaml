<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uwp="using:SimpleDemo.UWP">

    <Style TargetType="uwp:UwpCustomControl">
        <Setter Property="Background" Value="White" />
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="uwp:UwpCustomControl">
                    <Border Background="Aquamarine" BorderBrush="AntiqueWhite" BorderThickness="4">
                        <Grid x:Name="PART_Grid" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
